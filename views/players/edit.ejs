<%- include("../partials/header") %>


	<div class ="row">
			

		<h1 style= "text-align: center;">Edit <%= player.name %></h1>
		<div style="width:30%; margin: 25px auto;">
			<form action ="/players/<%= player._id %>?_method=PUT" method ="POST">
				<div class ="form-group">
					<input class ="form-control" type ="text" name ="player[name]" value="<%= player.name %>">
				</div>
				<div class ="form-group">
					<input class ="form-control" type ="text" name ="player[position]" value="<%= player.position %>">
				</div>
				<div class ="form-group">
					<input class ="form-control" type ="text" name ="player[team]" value="<%= player.team %>">
				</div>
				<div class ="form-group">
					<input class ="form-control" type ="text" name ="player[image]" value="<%= player.image %>">
				</div>
				<div class ="form-group">
					<input class ="form-control" type ="text" name ="player[age]" value="<%= player.age %>">
				</div>
				<div class ="form-group">
				<button class ="btn btn-lg btn-default btn-block btn-primary">Submit</button>
				</div>
				
			</form>
			<a href ="/clubs/aberdeen">Go Back</a>
		</div>
		

	</div>


<%- include("../partials/footer") %>